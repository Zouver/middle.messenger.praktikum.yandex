<!--Add helper for initiator: self, companion-->
<div class="widget-message initiator-{{initiator}} type-{{type}}">
    <div class="content">
        {{# if message }}
            {{> text text=message class="message"}}
        {{/if}}
        {{# if picture }}
            <img src="{{picture}}" alt="{{picture}}"/>
        {{/if}}
        <div class="more">
            {{# if statusIcon }}
                <i class="statusIcon fa-solid {{statusIcon}}"></i>
            {{/if}}
            {{> text-label text=time class="time"}}
        </div>
    </div>
</div>
